{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "module": "ES2022",
        "target": "ES2022",
        "removeComments": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "strictNullChecks": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.spec.ts"],
    "files": [ "src/index.ts"]
}
